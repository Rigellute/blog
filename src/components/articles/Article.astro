---
import { formatDate } from '../../utils'
import Card from '../card/Card.astro'
import CardTitle from '../card/Title.astro'
import CardEyebrow from '../card/Eyebrow.astro'
import CardDescription from '../card/Desc.astro'
import CardCta from '../card/Cta.astro'
import { type ArticleWithSlug } from '../home/Article.astro'

type Props = {
  article: ArticleWithSlug
}
const { article } = Astro.props
---

<article class="md:grid md:grid-cols-4 md:items-baseline">
  <Card as="div" class="md:col-span-3">
    <CardTitle as="h2" href={`/articles/${article.slug}`}>
      {article.title}
    </CardTitle>
    <CardEyebrow
      as="time"
      datetime={article.date.toString()}
      class="md:hidden"
      decorate
    >
      {formatDate(article.date)}
    </CardEyebrow>
    <CardDescription>{article.description}</CardDescription>
    <CardCta>Read article</CardCta>
  </Card>
  <CardEyebrow
    as="time"
    datetime={article.date.toString()}
    class="mt-1 hidden md:block"
  >
    {formatDate(article.date)}
  </CardEyebrow>
</article>
