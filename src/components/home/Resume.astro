import logoWarby from '../../images/logos/warby.png'
import kcLogo from '../../images/logos/keliris-consulting-logo.svg'
import BriefcaseIcon from '../icons/Briefcase.astro'
import Role, { type Role as RoleType } from './Role.astro'

const resume: RoleType[] = [
  {
    company: 'Webb Technology',
    title: 'Senior Full-Stack Engineer',
    logo: logoWebb,
    start: '2022',
    end: {
      label: 'Present',
      dateTime: new Date().getFullYear().toString(),
    },
  },
  {
    company: 'Warby Parker',
    title: 'Senior Full-Stack Engineer',
    logo: logoWarby,
    start: '2022',
    end: '2023',
  },
  {
    company: 'Hagerty',
    title: 'Senior Full-Stack Engineer',
    logo: logoHagerty,
    start: '2020',
    end: '2022',
  },
  {
    company: 'Eaze',
    title: 'Senior React Native Engineer',
    logo: logoEaze,
    start: '2020',
    end: '2020',
  },
  {
    company: 'Formidable',
    title: 'Senior Full-Stack Engineer',
    logo: logoFormidable,
    start: '2020',
    end: '2023',
  },
  {
    company: 'Hive',
    title: 'Senior React Native Engineer',
    logo: logoHive,
    start: '2018',
    end: '2020',
    iconStyle: {
      backgroundColor: '#ff7a00',
      padding: '3px',
