---
import { Image } from "@astrojs/image/components";
import ProfileImg from "../assets/Profile.jpg";
import LuteImg from "../assets/ai-renaissance-lute.png";
import RigelImg from "../assets/ai-octane1.png";
import SpotifyTuiImg from "../assets/ai-octane2.png";
import Wave from "../components/Wave.astro";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import Container from "../components/Container.astro";
import Scripts from "../components/Scripts.astro";
import Body from "../components/Body.astro";
import Prose from "../components/Prose.astro";
import StarScript from "../components/StarScript.astro";
import { Card } from "../components/Card";
import { formatDate } from "../utils";
import LinkIcon from "../components/icons/LinkIcon.astro";

// Use Astro.glob() to fetch all posts, and then sort them by date.
const posts = (await Astro.glob("./blog/*.{md,mdx}"))
  .sort(
    (a, b) =>
      new Date(b.frontmatter.pubDate).valueOf() -
      new Date(a.frontmatter.pubDate).valueOf()
  )
  .slice(0, 3);

const projects = [
  {
    title: "Lute music search",
    description:
      "üßæ A search engine over 18,000 pieces of lute music. Download high quality PDFs in French Tablature, midi, and facsimiles.",
    img: LuteImg,
    link: "/lute-search",
    label: "keliris.dev/lute-search",
  },
  {
    title: "spotify-tui",
    description:
      "An open source Spotify client for the terminal written in Rust üöÄ. Over 10k ‚≠ê on Github and 100+ contributors.",
    img: SpotifyTuiImg,
    link: "https://github.com/Rigellute/spotify-tui",
    label: "github.com",
  },
  {
    title: "Rigel theme",
    description:
      "üåå Colorscheme based on the star Rigel ‚ú®. Use in your vim, terminal and Slack.",
    img: RigelImg,
    link: "https://rigel.netlify.app/",
    label: "rigel.netlify.app",
  },
];
---

<!DOCTYPE html>
<html lang="en-us">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <Body>
    <Scripts />
    <StarScript />
    <div id="hero" class="relative">
      <div class="absolute w-full">
        <Header />
      </div>
      <div class="motion-reduce:hidden">
        <div id="stars" class="stars hidden dark:block"></div>
      </div>
      <div
        class="bg-gradient-to-b from-sky-100 to-sky-50 dark:from-slate-900 dark:to-slate-800"
      >
        <Container>
          <div class="pb-16 pt-32 lg:pt-56 mx-auto items-center">
            <Image
              class="h-16 w-16 mb-4 rounded-full"
              src={ProfileImg}
              format={"webp"}
            />
            <h1
              class="inline bg-gradient-to-r from-rose-500 via-sky-600 to-rose-500 dark:from-indigo-200 dark:via-sky-400 dark:to-indigo-200 bg-clip-text font-display text-5xl xl:text-7xl tracking-tight text-transparent"
            >
              Hi there, I'm Alexander
            </h1>
            <p
              class="mt-3 text-2xl tracking-tight text-slate-500 dark:text-slate-400"
            >
              I am a software engineer, musician and lover of learning. This is
              my little corner of the internet where I share my projects and
              articles.
            </p>
          </div>
        </Container>
        <Wave />
      </div>
    </div>
    <main>
      <Container>
        <div class="pt-10">
          <div class="space-y-10">
            <Prose>
              <h2 id="projects" class="dark:text-sky-400">Recent Projects</h2>
            </Prose>
            <ul
              role="list"
              class="mt-5 grid grid-cols-1 gap-x-12 gap-y-16 sm:grid-cols-2 lg:grid-cols-3"
            >
              {
                projects.map((proj) => (
                  <Card as="li">
                    <div class="z-10">
                      <Image
                        class="h-12 w-12 rounded-full"
                        src={proj.img}
                        format={"webp"}
                      />
                    </div>
                    <h2 class="mt-6 text-base lg:text-xl xl:text-2xl font-semibold text-slate-800 dark:text-slate-100">
                      <Card.Link href={proj.link}>{proj.title}</Card.Link>
                    </h2>
                    <Card.Description>{proj.description}</Card.Description>
                    <p class="relative z-10 mt-6 flex text-sm font-medium text-slate-400 transition group-hover:text-sky-500 dark:text-slate-200">
                      <LinkIcon className="h-6 w-6 flex-none" />
                      <span class="ml-2">{proj.label}</span>
                    </p>
                  </Card>
                ))
              }
            </ul>

            <Prose>
              <h2 id="blog" class="dark:text-sky-400">Recent Posts</h2>
            </Prose>
            <div class="mt-5 grid grid-cols-1 gap-y-20 lg:grid-cols-2">
              <div>
                <div class="flex flex-col gap-16">
                  {
                    posts.map((post) => (
                      <Card as="article">
                        <Card.Title href={post.url}>
                          {post.frontmatter.title}
                        </Card.Title>
                        <Card.Eyebrow
                          as="time"
                          dateTime={post.frontmatter.pubDate}
                          decorate
                        >
                          {formatDate(post.frontmatter.pubDate)}
                        </Card.Eyebrow>
                        <Card.Description>
                          {post.frontmatter.description}
                        </Card.Description>
                        <Card.Cta>Read article</Card.Cta>
                      </Card>
                    ))
                  }
                </div>
              </div>
              <div class="space-y-10 lg:pl-16 xl:pl-24">
                <!-- <div class="rounded-2xl border border-slate-200 p-6 dark:border-slate-700/40">
                </div> -->
              </div>
            </div>
          </div>
        </div>
      </Container>
    </main>

    <Footer />
  </Body>
</html>
