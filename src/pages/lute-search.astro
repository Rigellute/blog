---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import Scripts from "../components/Scripts.astro";
import Body from "../components/Body.astro";
import Container from "../components/Container.astro";
import Prose from "../components/Prose.astro";
import { LuteSearch } from "../components/LuteSearch";
---

<!DOCTYPE html>
<html lang="en-us">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <Scripts />
    <div class="sticky top-0 z-50 bg-sky-100 dark:bg-slate-800">
      <Header />
    </div>
    <main>
      <Container>
        <content>
          <div class="mt-16 sm:mt-20">
            <Prose>
              <h1>Search Lute Music</h1>
              <p>
                This index contains more than {(20_000).toLocaleString()} lute music
                documents in French tablature compiled by{" "}
                <a
                  target="_blank"
                  rel="noopener noreferrer"
                  href="http://www.lutemusic.org/"
                >
                  Sarge Gerbode.
                </a>
              </p>
            </Prose>
            <div>
              <LuteSearch client:load />
            </div>
          </div>
        </content>
      </Container>
      <Footer />
    </main>
  </Body>
</html>
